{
	"name": "timestamp",
	"displayName": "timestamp",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.68.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"repository": {
        "type": "git",
        "url": "https://github.com/bridgeL/timestemp-vscode-extension.git"
    },
	"main": "./extension.js",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "timestamp configuration",
			"properties": {
				"timestamp.open": {
					"type": "boolean",
					"default": true,
					"description": "enable auto timestamp convert",
					"scope": "resource"
				},
				"timestamp.activationOnLanguage": {
					"type": "array",
					"default": [
						"*"
					],
					"description": "Set the languages that the extension will be activated.  e.g. [\"plaintext\",\"json\",\"jsonc\"]. Use [\"*\"] to activate for all languages.",
					"scope": "resource"
				},
				"timestamp.disableOnLanguage": {
					"type": "array",
					"default": [],
					"description": "Set the languages where the extension will be disabled.  e.g. [\"plaintext\",\"json\",\"jsonc\"].",
					"scope": "resource"
				}
			}
		}
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.68.0",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.1",
		"@types/node": "16.x",
		"eslint": "^8.16.0",
		"glob": "^8.0.3",
		"mocha": "^10.0.0",
		"typescript": "^4.7.2",
		"@vscode/test-electron": "^2.1.3"
	}
}